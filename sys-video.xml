<theme>
<view name="system">
   
        <carousel name="main">
                <origin>0 0</origin>
                <pos>0 0</pos>	
                <size>1 1</size>
                <fontSize>.036</fontSize>
                <itemSize>.3 .3</itemSize> 
                <fontPath>./assets/mac/type/AdvercaseFont-Demo-Bold.otf</fontPath>
                <imageType>none</imageType>
                <itemScale>3</itemScale>
                <lineSpacing>.9</lineSpacing>
                <!-- <staticImage>./assets/mac/type/titles/${system.theme}.svg</staticImage> -->
                <unfocusedItemOpacity>0</unfocusedItemOpacity>
                <type>horizontalWheel</type>
                <itemsBeforeCenter>0</itemsBeforeCenter>
                <itemsAfterCenter>0</itemsAfterCenter>
                <horizontalOffset>0</horizontalOffset>
                <itemRotationOrigin> -3 -.05 </itemRotationOrigin>
                <itemRotation>-25</itemRotation> 
                <wheelHorizontalAlignment>left</wheelHorizontalAlignment>
                <verticalOffset> -.28 </verticalOffset>
                <color>${BGcolor}00</color>
                <fastScrolling>true</fastScrolling>
                <textColor>${BGcolor}</textColor>
                <textSelectedColor>${selected}</textSelectedColor>
                <zIndex>5</zIndex>
        </carousel>
        <animation name="animated-UI">
            <pos>0 0 </pos>
            <origin>0 0 </origin>
            <size>1 1</size>
            <stationary>withinView</stationary>
            <path>./assets/mac/animations/16-9/system-video.json</path>
            <iterationCount>1</iterationCount>
            <zIndex>4</zIndex>
        </animation>
        <image name="polaroidBG">
            <pos>0 0 </pos>
            <origin>0 0 </origin>
            <size>1 1</size>
            <path>./assets/mac/frames/system/16-9/PolaroidBG.png</path>
            <zIndex>2</zIndex>
        </image>
        <video name="gamevid-r">
            <pos>0.73 0.36 </pos>
            <cropSize>.21 .37 </cropSize>
            <cropPos>.5 0 </cropPos> 
            <origin>.5 0 </origin>
            <zIndex>3</zIndex>
            <rotation>-4</rotation>
            <gameselector>gameselector2</gameselector>
        </video>
        <video name="gamevid-l">
            <pos>0.27 0.36 </pos>
            <cropSize>.21 .37 </cropSize>
            <cropPos>.5 0 </cropPos> 
            <origin>.5 0 </origin>
            <zIndex>3</zIndex>
            <rotation>4</rotation>
            <gameselector>gameselector1</gameselector>
        </video>
        <text name="gtitle-r">
            <pos>0.735 0.74</pos>
            <origin>.5 0 </origin>
            <size>.15 .09</size>
            <fontPath>./assets/mac/type/Corza.ttf</fontPath>
            <fontSize>.04</fontSize>
            <metadata>name</metadata>
            <lineSpacing>1</lineSpacing>
            <horizontalAlignment>center</horizontalAlignment>
            <verticalAlignment>center</verticalAlignment>
            <color>${selected}</color>
            <zIndex>5</zIndex>
            <rotation>-6</rotation>
            <gameselector>gameselector2</gameselector>
        </text>
        <text name="gtitle-l">
            <pos>0.25 0.74</pos>
            <origin>.5 0 </origin>
            <size>.15 .09</size>
            <fontPath>./assets/mac/type/Corza.ttf</fontPath>
